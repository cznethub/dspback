{
  "type": "VerticalLayout",
  "elements": [
    { 
      "type": "Group",
      "label": "Basic Information",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/name"
        },
        {
          "type": "Control",
          "scope": "#/properties/url",
          "options": {
            "description": "URL for the landing page that describes the resource and where the content of the resource can be accessed."
          }
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "VerticalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/dateCreated"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/dateModified"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/status"
                }
              ]
            },
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/datePublished"
                }
              ]
            }
          ]
        },
        {
          "type": "Control",
          "scope": "#/properties/version"
        },
        {
          "type": "Control",
          "scope": "#/properties/description",
          "options": {
            "multi": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/keywords"
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/creators",
      "options": {
        "elementLabelProp": ["name"],
        "detail": {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/name"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/email"
                }
              ]
            },
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/organization"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/orcid"
                }
              ]
            }
          ]
        }
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/contributors",
      "options": {
        "elementLabelProp": ["name"],
        "detail": {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/name"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/email"
                }
              ]
            },
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/organization"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/orcid"
                }
              ]
            }
          ]
        }
      }
    },
    {
      "type": "Control",
      "label": "Temporal coverage",
      "scope": "#/properties/temporalCoverage"
    },
    {
      "type": "Control",
      "label": "Spatial coverage",
      "scope": "#/properties/spatialCoverage"
    },
    {
      "type": "Control",
      "scope": "#/properties/relations"
    },
    {
      "type": "Control",
      "scope": "#/properties/funders",
      "options": {
        "elementLabelProp": ["fundingAgency"]
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/license",
      "options": {
        "detail": {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/name"
            },
            {
              "type": "Control",
              "scope": "#/properties/description"
            },
            {
              "type": "Control",
              "scope": "#/properties/url",
              "options": {
                "label": "License URL",
                "description": "URL for a page that describes the license for the resource."
              }
            }
          ]
        }
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/provider",
      "options": {
        "detail": {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/name"
            },
            {
              "type": "Control",
              "scope": "#/properties/url",
              "options": {
                "label": "Provider URL",
                "description": "A URL for the repository or organization that provides access to the resource."
              }
            }
          ]
        }
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/notes",
      "options": {
        "multi": true
      }
    }
  ]
}